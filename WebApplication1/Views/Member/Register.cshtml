@model WebApplication1.Models.Member

@{
    ViewData["Title"] = "Register";
    string err = ViewBag.err;

}

<h1>註冊</h1>



<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Register">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label for="account">帳號</label>
                <input asp-for="Account" class="form-control" required />
                <span asp-validation-for="Account" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Passwd">密碼</label>
                <input asp-for="Passwd" class="form-control"  />
                <span asp-validation-for="Passwd" class="text-danger"></span>
            </div>
@*            <div class="form-group">
                <label for="rePasswd">確認密碼</label>
                <input id="rePasswd" name="rePasswd" class="form-control"  />
            </div>*@

            <div class="form-group">
                <label for="Email">信箱</label>
                <input asp-for="Email" class="form-control" required />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Email">姓名</label>
                <input asp-for="Name" class="form-control" required />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="row mb-3">
                <label style="color:red " class="col mb-3 col-form-label">@err</label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" id="submit" />
            </div>


        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}
